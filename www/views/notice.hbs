<div class="col-lg-12">
    <div class="card">
        <div id="insertNoticeHeader" class="card-header">Publish your Notice Here</div>
    </div>
    <div id="insertItem" class="card-body card-block">
        <form action="addNotice" method="post" class="">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" id="headLine" name="headLine" placeholder="Head Line" class="form-control"
                           required>
                    <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                </div>
            </div>
            <div class="form-group">
                <label for="note1">Add notice</label>
                <textarea class="form-control" id="note1" name="note1" rows="3" required></textarea>
            </div>
            <div class="form-actions form-group">
                <button type="submit" class="btn btn-secondary btn-sm">Submit</button>
            </div>
        </form>
    </div>

</div>


<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Data Table</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Headline</th>
                                <th>Content</th>
                                <th>Publisher</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each result}}
                                <tr class="table-primary">
                                    <td>{{yr}}-{{m}}-{{d}}</td>
                                    <td>{{headline}}</td>
                                    <td>{{note}}</td>
                                    <td>{{username}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var x = document.getElementById("insertItem");
    x.style.display = "none";
    $('#insertNoticeHeader').click(function () {

        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }

    });

</script>